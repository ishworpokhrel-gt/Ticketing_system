@model RegisterUserViewModel

@{
    ViewData["Title"] = "Register User";
    ViewData["BreadCrum"] = "Register User";
}
<div class="card">
    <div class="card-header p-lg-5">
        <h1>Register User</h1>
    </div>
    <div class="card-body p-lg-17">
        <form asp-action="RegisterUser" method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <div class="fv-row mb-8">
                <label class="fs-6 fw-semibold mb-2">Roles</label>
                <select asp-for="SelectedRole" asp-items="Model.AvailableRoles" class="form-select form-select-solid" data-control="select2" data-placeholder="Select Roles" id="roleSelect" onchange="updateLabels()"></select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="row g-9 mb-8">
                <div class="col-md-6 fv-row">
                    <label id="firstNameLabel" asp-for="FirstName" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="FirstName" class="form-control form-control-solid" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 fv-row">
                    <label id="lastNameLabel" asp-for="LastName" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="LastName" class="form-control form-control-solid" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-9 mb-8">
                <div class="col-md-6 fv-row">
                    <label asp-for="UserName" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="UserName" class="form-control form-control-solid" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-md-6 fv-row">
                    <label asp-for="Email" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="Email" class="form-control form-control-solid" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-9 mb-8">
                <div class="col-md-6 fv-row">
                    <label asp-for="TelNumber" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="TelNumber" class="form-control form-control-solid" />
                    <span asp-validation-for="TelNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6 fv-row">
                    <label asp-for="PhoneNumber" class="required fs-6 fw-semibold mb-2"></label>
                    <input asp-for="PhoneNumber" class="form-control form-control-solid" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <a asp-action="Index" type="reset" class="btn btn-light me-3">Back to User List</a>
                <button type="submit" class="btn btn-primary">
                    <span class="indicator-label">Register</span>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        updateLabels();
    });
    function updateLabels() {
        const roleSelect = document.getElementById('roleSelect');
        const firstNameLabel = document.getElementById('firstNameLabel');
        const lastNameLabel = document.getElementById('lastNameLabel');

        if (roleSelect.value === "EndUser") {
            firstNameLabel.innerText = "Branch Name";
            lastNameLabel.innerText = "Branch Code";
        } else {
            firstNameLabel.innerText = "First Name";
            lastNameLabel.innerText = "Last Name";
        }
    }
</script>

