@model IEnumerable<TicketViewModel>

@{
    ViewData["Title"] = "Tickets List";
    ViewData["BreadCrum"] = "Tickets List";
    var Sn = 1;
}

<div class="card">
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <div class="d-flex align-items-center position-relative my-1">
                <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                    <span class="path1"></span>
                    <span class="path2"></span>
                </i>
                <input type="text" data-kt-user-table-filter="search" class="form-control form-control-solid w-250px ps-13" placeholder="Search Ticket" />
            </div>
            <div class="d-flex align-items-center position-relative ms-4 my-1">
                <label for="fromDate" class="me-2">From:</label>
                <input type="date" id="fromDate" name="fromDate" class="form-control form-control-solid w-200px" />
            </div>

            <!-- To Date Input -->
            <div class="d-flex align-items-center position-relative ms-4 my-1">
                <label for="toDate" class="me-2">To:</label>
                <input type="date" id="toDate" name="toDate" class="form-control form-control-solid w-200px" />
            </div>
        </div>
        <div class="card-toolbar">
            <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                    <i class="ki-duotone ki-filter fs-2">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>Filter
                </button>
                <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true">
                    <div class="px-7 py-5">
                        <div class="fs-5 text-dark fw-bold">Filter Options</div>
                    </div>
                    <div class="separator border-gray-200"></div>
                    <form asp-action="Index" method="get">
                    <div class="px-7 py-5" data-kt-user-table-filter="form">
                        <div class="mb-10">
                            <label class="form-label fs-6 fw-semibold">Issue Type:</label>
                            <select name="issueTypeId" class="form-select form-select-solid fw-bold" data-kt-select2="true" data-placeholder="Select option" asp-items="ViewBag.IssueTypes" data-allow-clear="true" data-kt-user-table-filter="IssueType" data-hide-search="true">
                                <option>select IssueType</option>
                            </select>
                        </div>
                            <div class="mb-10">
                                <label class="form-label fs-6 fw-semibold">Status:</label>
                                <select name="status" class="form-select form-select-solid fw-bold" data-kt-select2="true" data-placeholder="Select option" asp-items="ViewBag.TicketStatus" data-allow-clear="true" data-kt-user-table-filter="Status" data-hide-search="true">
                                    <option>Sekect Status</option>
                                </select>
                            </div>
                        <div class="mb-10">
                            <label class="form-label fs-6 fw-semibold">Two Step Verification:</label>
                            <select class="form-select form-select-solid fw-bold" data-kt-select2="true" data-placeholder="Select option" data-allow-clear="true" data-kt-user-table-filter="two-step" data-hide-search="true">
                                <option></option>
                                <option value="Enabled">Enabled</option>
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-light btn-active-light-primary fw-semibold me-2 px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="reset">Reset</button>

                            <button type="submit" asp-controller="Ticket" asp-action="Index" class="btn btn-primary fw-semibold px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="filter">Apply</button>
                        </div>
                    </div>
                    </form>
                </div>
                <a class="btn btn-primary" asp-controller="Ticket" asp-action="Create">
                    <i class="ki-duotone ki-plus fs-2"></i>Create New Ticket
                </a>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table_tickets">
            <thead>
                <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                    <th class="w-10px pe-2 sorting_disabled" rowspan="1" colspan="1" style="width: 32px;">SN</th>
                    <th class="min-w-125px">Issue Type</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Assignee</th>
                    <th>Created By</th>
                    <th>Reported By</th>
                    <th class="text-end min-w-100px">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-semibold">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Sn</td>
                        <td>@item.IssueTypeValue</td>
                        <td>@item.PriorityValue</td>
                        <td>@item.StatusValue</td>
                        <td>@item.AsignTo</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.ReportedbBy</td>
                        <td class="text-end">
                            <a class="btn btn-info btn-sm" asp-action="TicketDetails" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                    Sn = Sn + 1;
                }
            </tbody>
        </table>
    </div>
</div>
