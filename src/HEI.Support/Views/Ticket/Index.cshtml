@model IEnumerable<TicketViewModel>

@{
    ViewData["Title"] = "Tickets List";
}

<h1>Tickets</h1>

<p>
    <a class="btn btn-primary" asp-controller="Ticket" asp-action="Create">Create New Ticket</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Issue Type</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Asignee</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IssueTypeValue</td>
                <td>@item.Description</td>
                <td>@item.PriorityValue</td>
                <td>
                    <form asp-action="GetStatus" method="post" id="statusForm-@item.Id">
                        <input type="hidden" name="TicketId" value="@item.Id" />
                        <select asp-for="@item.Status" class="form-select form-select-solid" data-control="select2" data-hide-search="true" asp-items="ViewBag.TicketStatus" onchange="submitStatusForm('@item.Id')"></select>
                    </form>
                </td>
                <td>@item.AsignTo</td>
                <td>@item.CreatedBy</td>
                <td>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#assignToModal-@item.Id">Assign To</button> |
                    <a class="btn btn-success" asp-action="PickTask" asp-route-id="@item.Id">Pick Task</a> |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modals for assigning the ticket -->
@foreach (var item in Model)
{
    <div class="modal fade" id="assignToModal-@item.Id" tabindex="-1" aria-labelledby="assignToModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignToModalLabel-@item.Id">Assign Ticket to IT Support Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group">
                        <form asp-action="AssignTo" method="post">
                            <input type="hidden" name="TicketId" value="@item.Id" />
                            @foreach (var user in ViewBag.Users)
                            {
                                <button type="submit" name="UserId" value="@user.Value"
                                        class="list-group-item list-group-item-action">
                                    @user.Text
                                </button>
                            }
                        </form>

                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function submitStatusForm() {
        document.getElementById('statusForm').submit();
    }
</script>