@model IEnumerable<TicketViewModel>

@{
    ViewData["Title"] = "Tickets List";
}

<h1>Tickets</h1>

<p>
    <a class="btn btn-primary" asp-controller="Ticket" asp-action="Create">Create New Ticket</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th><strong>Issue Type</strong></th>
            <th><strong>Priority</strong></th>
            <th><strong>Status</strong></th>
            <th><strong>Assignee</strong></th>
            <th><strong>Created By</strong></th>
            <th><strong>Actions</strong></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IssueTypeValue</td>
                <td>@item.PriorityValue</td>
                <td>@item.StatusValue</td>
                <td>@item.AsignTo</td>
                <td>@item.CreatedBy</td>
                <td>
                    <a class="btn btn-info" asp-action="TicketDetails" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modals for assigning the ticket -->
@foreach (var item in Model)
{
    <div class="modal fade" id="assignToModal-@item.Id" tabindex="-1" aria-labelledby="assignToModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignToModalLabel-@item.Id">Assign Ticket to IT Support Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group">
                        <form asp-action="AssignTo" method="post">
                            <input type="hidden" name="TicketId" value="@item.Id" />
                            @foreach (var user in ViewBag.Users)
                            {
                                <button type="submit" name="UserId" value="@user.Value"
                                        class="list-group-item list-group-item-action">
                                    @user.Text
                                </button>
                            }
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
