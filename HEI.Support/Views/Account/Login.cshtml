@model HEI.Support.Areas.Admin.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}
<div class="w-lg-500px p-10">
	<form class="form w-100" novalidate="novalidate" asp-action="Login" method="post">
		<div class="text-center mb-11">
			<h1 class="text-dark fw-bolder mb-3">Sign In</h1>
		</div>
		<div class="fv-row mb-8">
			<input placeholder="User Name" asp-for="UserName" autocomplete="off" class="form-control bg-transparent" />
			<span asp-validation-for="UserName" class="text-danger"></span>
		</div>
		<div class="fv-row mb-3">
			<input type="password" placeholder="Password" asp-for="Password" autocomplete="off" class="form-control bg-transparent" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
			<a asp-action="ForgetPassword" class="link-primary">Forgot Password ?</a>
		</div>
		<div class="d-grid mb-10">
			<button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
				<span class="indicator-label">Sign In</span>
				<span class="indicator-progress">
					Please wait...
					<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
				</span>
			</button>
		</div>
	</form>
</div>